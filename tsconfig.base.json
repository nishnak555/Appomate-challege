{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@appomate-challenge/source"],
    "paths": {
      "@appomate-challenge/api-client": ["libs/api-client/src/index.ts"],
      "@appomate-challenge/api-client/*": ["libs/api-client/src/*"],
      "@appomate-challenge/core": ["libs/core/src/index.ts"],
      "@appomate-challenge/core/*": ["libs/core/src/*"]
    }
  }
}
